<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="6dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:id="@+id/imgCapa_ill"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@null"
        android:layout_alignTop="@id/imgCapa_ill"
        android:layout_toRightOf="@id/imgCapa_ill"
        android:layout_toEndOf="@id/imgCapa_ill"
        android:id="@+id/txtTitulo_ill"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@null"
        android:layout_below="@id/txtTitulo_ill"
        android:layout_toRightOf="@id/imgCapa_ill"
        android:layout_toEndOf="@id/imgCapa_ill"
        android:textStyle="italic"
        android:id="@+id/txtAutores_ill"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@null"
        android:layout_below="@id/txtAutores_ill"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txtAno_ill"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@null"
        android:layout_below="@id/txtAutores_ill"
        android:layout_toRightOf="@id/imgCapa_ill"
        android:layout_toEndOf="@id/imgCapa_ill"
        android:id="@+id/txtPaginas_ill"/>

</RelativeLayout>